<style>
  td{
    font-size: 20px;
  }
</style>
<h2>Services</h2>
<%unless @services.blank? %>
  <div class="container center-block">
  <div class="row">
  <div class="col-md-offset-3"></div>
  <div class="col-md-6">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.unit %></td>
        <td><%= service.cost %></td>
<!--        <td><%#= link_to 'Show', service %></td>-->
        <td><%= link_to 'Edit', edit_service_path(service) ,class: "btn btn-success" %></td>
<!--        <td><%#= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>

  </tbody>
</table>
    <%else %>
      <br>
      <%= link_to 'New',newservices_path ,class: "btn btn-primary btn-lg" %>
    <%end %>
</div>
<div class="col-md-offset-3"></div>
</div>
</div>
