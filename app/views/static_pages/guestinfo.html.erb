<body>

<div class="container">
  <h2>King's Customers</h2>
  <h3>This is the page for customers who rent a room .</h3>
   <h3><i> If you are a guest, please enter the email that you registered with the manager to see the details </i></h3>
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Enter email</button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Please enter your email</h4>
        </div>
        <div class="modal-body">
          <%= form_tag(guest_path, method: :get) do %>
            <%= text_field_tag :r, params[:r] %>
            <%= submit_tag 'Go', name: nil %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
<%unless @guests.blank? %>

  <h1>Guests</h1>

  <table border="1">
    <thead>
    <tr>
      <th>Name</th>
      <th>Birth</th>
      <th>Address</th>
      <th>Identitycard</th>
      <th>Phonenumber</th>
      <th>Image</th>
      <th>Job</th>
      <th>Notice</th>
      <th>Room</th>
      <th>Email</th>

    </tr>
    </thead>

    <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.birth %></td>
        <td><%= guest.address %></td>
        <td><%= guest.identitycard %></td>
        <td><%= guest.phonenumber %></td>
        <td><%= guest.image %></td>
        <td><%= guest.job %></td>
        <td><%= guest.notice %></td>
        <td><%=  guest.room.name %></td>
        <td><%=  guest.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
