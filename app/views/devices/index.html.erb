
<h2>Devices</h2>
<%= link_to 'New Device', new_device_path,class: "btn btn-primary btn-lg" %>
<br><br>
<div class="container">
  <div class="row">
    <% @devices.each do |device| %>
      <div class="card col-md-3">
        <div class="card-header bg-info text-white"><%= link_to device.name.upcase , edit_device_path(device),class: "btn btn-info text-white",style: "font-size: 20px;font-weight: bold" %>&nbsp;<i class="material-icons">&#xe337;</i></div>
        <div class="card-body">
          <div><b>Branch : </b><%= device.branch %></div>
          <div><b>Price : </b><%= device.price %></div>
        </div>
        <div class="card-footer" >

            <div class="row">
              <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' },class: "col-md-12 btn btn-danger"%>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<br>

